<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_normal_form_view_extended" model="ir.ui.view">
            <field name="name">product.product.form.view.extended</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_title')]/h1" position="after">
                    <h2>
                        <div class="d-flex">
                            <field class="text-break" name="product_arabic_name" options="{'line_breaks': False}"
                                   widget="text" placeholder="على سبيل المثال برجر بالجبنة" on_change="1"/>
                        </div>
                    </h2>
                </xpath>
            </field>
        </record>

        <record id="product_template_only_form_view_extended" model="ir.ui.view">
            <field name="name">product.template.product.form.extended</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_title')]/h1" position="after">
                    <h2>
                        <div class="d-flex">
                            <field class="text-break" name="product_arabic_name" options="{'line_breaks': False}"
                                   widget="text" placeholder="على سبيل المثال برجر بالجبنة" on_change="1"/>
                        </div>
                    </h2>
                </xpath>
            </field>
        </record>
    </data>
</odoo>